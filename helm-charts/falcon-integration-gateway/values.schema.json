{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "affinity": {
            "type": "object"
        },
        "autoscaling": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "maxReplicas": {
                    "type": "integer"
                },
                "minReplicas": {
                    "type": "integer"
                },
                "targetCPUUtilizationPercentage": {
                    "type": "integer"
                }
            }
        },
        "falcon": {
            "type": "object",
            "properties": {
                "client_id": {
                    "type": "string",
                    "pattern": "^[0-9a-zA-Z]+$"

                },
                "client_secret": {
                    "type": "string",
                    "pattern": "^[0-9a-zA-Z]+$"
                },
                "cloud_region": {
                    "type": "string",
                    "enum": ["us-1", "us-2", "eu-1", "us-gov-1"]
                },
                "integration_gateway": {
                    "type": "object",
                    "properties": {
                        "application_id": {
                            "type": "string",
                            "pattern": "^.+$",
                            "example": [
                                "my-unique-fig-instance-001"
                            ]
                        },
                        "level": {
                            "type": "string",
                            "enum": ["ERROR", "WARN", "INFO", "DEBUG"],
                            "default": "INFO"

                        },
                        "older_than_days_threshold": {
                            "type": "integer"
                        },
                        "detections_exclude_clouds": {
                            "type": "string",
                            "enum": ["AWS", "Azure", "GCP", "unrecognized"],
                            "example": [
                                "GCP"
                            ]
                        },
                        "severity_threshold": {
                            "type": "integer"
                        },
                        "worker_threads": {
                            "type": "integer"
                        }
                    }
                }
            }
        },
        "fullnameOverride": {
            "type": "string"
        },
        "image": {
            "type": "object",
            "properties": {
                "pullPolicy": {
                    "type": "string"
                },
                "repository": {
                    "type": "string"
                },
                "tag": {
                    "type": "string"
                }
            }
        },
        "imagePullSecrets": {
            "type": "array"
        },
        "nameOverride": {
            "type": "string"
        },
        "nodeSelector": {
            "type": "object"
        },
        "podAnnotations": {
            "type": "object"
        },
        "podSecurityContext": {
            "type": "object"
        },
        "push": {
            "type": "object",
            "properties": {
                "aws_security_hub": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        }
                    },
                    "if": { "properties": { "enabled": { "const": true } } },
                    "then": {
                        "properties": {
                            "region": {
                                "type": "string"
                            }
                        }
                    }
                },
                "azure_log_analytics": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        }
                    },
                    "if": { "properties": { "enabled": { "const": true } } },
                    "then": {
                        "properties": {
                            "primary_key": {
                                "type": "string"
                            },
                            "workspace_id": {
                                "type": "string"
                            },
                            "arc_autodiscovery": {
                                "type": "boolean"
                            }
                        }
                    }
                },
                "chronicle": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        }
                    },
                    "if": { "properties": { "enabled": { "const": true } } },
                    "then": {
                        "properties": {
                            "region": {
                                "type": "string"
                            },
                            "security_key": {
                                "type": "string"
                            }
                        }
                    }
                },
                "cloudtrail_lake": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        }
                    },
                    "if": { "properties": { "enabled": { "const": true } } },
                    "then": {
                        "properties": {
                            "region": {
                                "type": "string"
                            },
                            "channel_arn": {
                                "type": "string"
                            }
                        }
                    }
                },
                "gcp_security_command_center": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        }
                    }
                },
                "vmware_workspace_one": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        }
                    },
                    "if": { "properties": { "enabled": { "const": true } } },
                    "then": {
                        "properties": {
                            "syslog_host": {
                                "type": "string"
                            },
                            "syslog_port": {
                                "type": "string"
                            },
                            "token": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "replicaCount": {
            "type": "integer"
        },
        "resources": {
            "type": "object"
        },
        "securityContext": {
            "type": "object",
            "properties": {
                "runAsNonRoot": {
                    "type": "boolean"
                },
                "runAsUser": {
                    "type": "integer"
                }
            }
        },
        "tolerations": {
            "type": "array"
        }
    }
}
