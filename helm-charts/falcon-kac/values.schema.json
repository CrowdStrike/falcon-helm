{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "image": {
            "type": "object",
            "required": [
                "repository",
                "pullPolicy",
                "tag"
            ],
            "properties": {
                "pullPolicy": {
                    "type": "string",
                    "default": "Always",
                    "pattern": "^(Always|Never|IfNotPresent)$"
                },
                "pullSecrets": {
                    "type": [
                        "null",
                        "string"
                    ]
                },
                "registryConfigJSON": {
                    "type": [
                        "null",
                        "string"
                    ]
                },
                "repository": {
                    "type": "string"
                },
                "tag": {
                    "type": "string",
                    "default": "latest"
                },
                "digest": {
                    "type": [
                        "null",
                        "string"
                    ],
                    "pattern": "^sha256:[0-9a-f]{64}$"
                }
            }
        },
        "replicas": {
            "type": "integer",
            "default": 1,
            "minimum": 1
        },
        "watcherPort": {
            "type": "integer",
            "default": "4080",
            "minimum": 1024,
            "maximum": 65535
        },
        "webhookPort": {
            "type": "integer",
            "default": "4433",
            "minimum": 1024,
            "maximum": 65535
        },
        "autoCertificateUpdate": {
            "type": "boolean",
            "default": "true"
        },
        "certExpiration": {
            "type": "integer",
            "default": "3650",
            "minimum": 0
        },
        "domainName": {
            "type": [
                "null",
                "string"
            ]
        },
        "serviceAccount": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "default": "falcon-kac-sa"
                },
                "annotations": {
                    "type": "object",
                    "default": {},
                    "examples": [
                        {
                            "iam.gke.io/gcp-service-account": "my-service-account@my-project.iam.gserviceaccount.com"
                        }
                    ]
                }
            }
        },
        "falcon": {
            "type": "object",
            "properties": {
                "cid": {
                    "type": [
                        "null",
                        "string"
                    ],
                    "pattern": "^[0-9a-fA-F]{32}-[0-9a-fA-F]{2}$",
                    "example": [
                        "1234567890ABCDEF1234567890ABCDEF-12"
                    ]
                },
                "trace": {
                    "type": [
                        "null",
                        "string"
                    ],
                    "pattern": "^(|none|err|warn|info|debug)$"
                },
                "apd": {
                    "type": [
                        "null",
                        "boolean"
                    ]
                },
                "aph": {
                    "type": [
                        "null",
                        "string"
                    ]
                },
                "app": {
                    "type": [
                        "null",
                        "integer"
                    ],
                    "minimum": 0,
                    "maximum": 65535
                },
                "feature": {
                    "type": [
                        "null",
                        "string"
                    ]
                },
                "billing": {
                    "type": [
                        "null",
                        "string"
                    ]
                },
                "tags": {
                    "type": [
                        "null",
                        "string"
                    ]
                },
                "provisioning_token": {
                    "type": [
                        "null",
                        "string"
                    ]
                }
            }
        },
        "clusterVisibility": {
            "type": "object",
            "properties": {
                "resourceSnapshots": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean",
                            "default": "true"
                        },
                        "interval": {
                            "type": "string",
                            "default": "22h"
                        }
                    }
                },
                "resourceWatcher": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean",
                            "default": "true"
                        }
                    }
                },
                "resourceConfigMap": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean",
                            "default": "true"
                        }
                    }
                }
            }
        },
        "annotations": {
            "type": "object",
            "default": {}
        },
        "labels": {
            "type": "object",
            "default": {}
        },
        "podAnnotations": {
            "type": "object",
            "default": {}
        },
        "tolerations": {
            "type": "array"
        },
        "affinity": {
            "type": "object",
            "default": {
                "nodeAffinity": {
                    "requiredDuringSchedulingIgnoredDuringExecution": {
                        "nodeSelectorTerms": [
                            {
                                "matchExpressions": [
                                    {
                                        "key": "kubernetes.io/arch",
                                        "operator": "In",
                                        "values": [
                                            "amd64",
                                            "arm64"
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                }
            }
        },
        "falconWatcherResources": {
            "type": "object",
            "properties": {
                "requests": {
                    "type": "object",
                    "properties": {
                        "cpu": {
                            "type": "string"
                        },
                        "memory": {
                            "type": "string"
                        }
                    }
                },
                "limits": {
                    "type": "object",
                    "properties": {
                        "cpu": {
                            "type": "string"
                        },
                        "memory": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "falconClientResources": {
            "type": "object",
            "properties": {
                "requests": {
                    "type": "object",
                    "properties": {
                        "cpu": {
                            "type": "string"
                        },
                        "memory": {
                            "type": "string"
                        }
                    }
                },
                "limits": {
                    "type": "object",
                    "properties": {
                        "cpu": {
                            "type": "string"
                        },
                        "memory": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "falconClientNoWebhookResources": {
            "type": "object",
            "properties": {
                "requests": {
                    "type": "object",
                    "properties": {
                        "cpu": {
                            "type": "string"
                        },
                        "memory": {
                            "type": "string"
                        }
                    }
                },
                "limits": {
                    "type": "object",
                    "properties": {
                        "cpu": {
                            "type": "string"
                        },
                        "memory": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "falconAcResources": {
            "type": "object",
            "properties": {
                "requests": {
                    "type": "object",
                    "properties": {
                        "cpu": {
                            "type": "string"
                        },
                        "memory": {
                            "type": "string"
                        }
                    }
                },
                "limits": {
                    "type": "object",
                    "properties": {
                        "cpu": {
                            "type": "string"
                        },
                        "memory": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "autoDeploymentUpdate": {
            "type": "boolean",
            "default": "true"
        },
        "nameOverride": {
            "type": [
                "null",
                "string"
            ]
        },
        "fullnameOverride": {
            "type": [
                "null",
                "string"
            ]
        },
        "hostNetwork": {
            "type": "boolean",
            "default": "false"
        },
        "dnsPolicy": {
            "type": [
                "null",
                "string"
            ],
            "default": null,
            "enum": [
                null,
                "ClusterFirst",
                "ClusterFirstWithHostNet",
                "Default",
                "None"
            ]
        },
        "webhook": {
            "type": "object",
            "properties": {
                "failurePolicy": {
                    "type": "string",
                    "default": "Ignore",
                    "pattern": "^(Ignore|Fail)$"
                },
                "disableNamespaces": {
                    "type": [
                        "null",
                        "string"
                    ]
                }
            }
        },
        "resourceQuota": {
            "type": "object",
            "properties": {
                "pods": {
                    "oneOf": [
                        {
                            "type": [
                                "string",
                                "null"
                            ],
                            "default": "2",
                            "pattern": "^[0-9]+$"
                        },
                        {
                            "type": [
                                "integer",
                                "null"
                            ],
                            "default": "2",
                            "pattern": "^[0-9]+$",
                            "minimum": 1
                        }
                    ]
                }
            }
        },
        "global": {
            "type": "object",
            "properties": {
                "falcon": {
                    "type": "object",
                    "properties": {
                        "cid": {
                            "type": [
                                "null",
                                "string"
                            ],
                            "pattern": "^[0-9a-fA-F]{32}-[0-9a-fA-F]{2}$"
                        }
                    }
                }
            }
        }
    },
    "oneOf": [
        {
            "properties": {
                "falconSecret": {
                    "required": ["enabled", "secretName"],
                    "properties": {
                        "enabled": {
                            "enum": [true]
                        },
                        "secretName": {
                            "description": "The name of an existing secret in which Falcon specific secrets are stored.",
                            "type": "string",
                            "minLength": 1
                        }
                    }
                }
            }
        },
        {
            "properties": {
                "global": {
                    "type": "object",
                    "properties": {
                        "falconSecret": {
                            "type": "object",
                            "required": ["enabled", "secretName"],
                            "properties": {
                                "enabled": { "enum": [true] },
                                "secretName": {
                                    "type": "string",
                                    "minLength": 1
                                }
                            }
                        }
                    }
                }
            }
        },
        {
            "properties": {
                "falcon": {
                    "required": ["cid"],
                    "properties": {
                        "cid": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        {
            "properties": {
                "global": {
                    "type": "object",
                    "properties": {
                        "falcon": {
                            "type": "object",
                            "required": ["cid"],
                            "properties": {
                                "cid": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        }
    ]
}
